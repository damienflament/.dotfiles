/*
    VSCode configuration
*/
{
    /*
        Settings editing
    */
    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": false,
    "workbench.settings.openDefaultKeybindings": false,
    /*
        Theming
    */
    "workbench.colorTheme": "Solarized Dark",
    "workbench.colorCustomizations": {},
    "dayNightThemeSwitcher.dayTheme": "Solarized Light",
    "dayNightThemeSwitcher.nightTheme": "Solarized Dark",
    "dayNightThemeSwitcher.toggleDefaultDark": true,
    "editor.fontFamily": "'Hack', 'monospace'",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.suggestFontSize": 14,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.lineHeight": 1,
    "C_Cpp.inactiveRegionOpacity": 0.3,
    /*
        Components UI
    */
    "window.titleBarStyle": "native",
    "breadcrumbs.enabled": true,
    "workbench.list.horizontalScrolling": true,
    "window.menuBarVisibility": "toggle",
    "explorer.openEditors.visible": 0,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.rendererType": "dom",
    "window.zoomLevel": 0,
    /*
        Editor UI
    */
    "editor.lineNumbers": "on",
    "editor.minimap.enabled": false,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.renderIndentGuides": false,
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 1,
    "editor.cursorBlinking": "expand",
    "editor.smoothScrolling": true,
    "debug.inlineValues": true,
    /*
        Editor behaviors
    */
    "editor.tabSize": 4,
    "editor.autoIndent": true,
    "editor.detectIndentation": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 60000,
    "files.encoding": "utf8",
    "files.autoGuessEncoding": true, // This feature is broken and should be disabled in a project settings file
    "editor.multiCursorModifier": "alt",
    /*
        Explorer behaviors
    */
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    /*
        Suggestions
    */
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false,
    },
    "editor.snippetSuggestions": "bottom",
    "editor.wordBasedSuggestions": true,
    "editor.suggest.filterGraceful": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.suggest.localityBonus": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.acceptSuggestionOnCommitCharacter": true,
    /*
        Files associations
    */
    "files.associations": {
        /*
            Zsh
        */
        "**/.config/zsh/**/*": "shellscript",
        "**/.local/share/zsh/**/*": "shellscript",
        /*
            Configure template
        */
        "*.h.in": "c",
        "*.conf.in": "properties",
        "*.service.in": "systemd-unit-file",
        "*.xml.in": "xml",
        /*
            C/C++
        */
        "*.private.h": "c",
        "*.h": "c",
        ".c": "c",
        ".C": "cpp",
        "*.cpp": "cpp",
        /*
            GNU Build system (Autotools)
        */
        "config.site": "shellscript",
        /*
            SCons
        */
        "SConstruct": "python",
        "SConscript": "python",
        /*
            Clang
        */
        "*.clang-format": "yaml",
        /*
            PkgConfig
        */
        "*.pc": "shellscript",
        /*
            Python
        */
        "*.yapf": "ini",
        ".flake8": "ini",
        /*
            Configuration files
        */
        "**/.config/fontconfig/**/*": "xml",
        "**/.config/feh/*": "tsv",
    },
    /*
        Hidden files
    */
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    /*
        Files excluded from searching (inherit hidden files)
    */
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true
    },
    /*
        Files watching
    */
    "files.useExperimentalFileWatcher": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true
    },
    /*
        Diff
    */
    "diffEditor.ignoreTrimWhitespace": false,
    /*
        Debugging
    */
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openDebug": "openOnSessionStart",
    "debug.openExplorerOnEnd": false,
    "debug.showInStatusBar": "never",
    "debug.toolBarLocation": "docked",
    "launch": {
        "configurations": [],
        "compounds": []
    },
    /*
        Terminal
    */
    "terminal.external.linuxExec": "urxvt",
    "terminal.integrated.drawBoldTextInBrightColors": true,
    "terminal.integrated.fontWeightBold": "normal",
    "terminal.integrated.scrollback": 10000,
    /*
        Telemetry
    */
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    /*
        Git
    */
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.settings.mode": "advanced",
    "gitlens.keymap": "alternate",
    /*
        Todos
    */
    "todo-tree.autoRefresh": true,
    "todo-tree.showBadges": false,
    "todo-tree.expanded": true,
    "todo-tree.flat": true,
    "todo-tree.trackFile": true,
    "todo-tree.showInExplorer": true,
    "todo-tree.labelFormat": "${after}",
    "todo-tree.regexCaseSensitive": false,
    "todo-tree.tags": [
        "NOTE", // NOTE
        "TODO", // TODO
        "FIXME", // FIXME
        "HACK", // HACK
        "BUG", // BUG
        "DEBUG", // DEBUG
        "OPTIMIZE", // OPTIMIZE
    ],
    "todo-tree.highlightDelay": 0,
    "todo-tree.defaultHighlight": {
        "type": "text",
        "foreground": "#1c1c1c",
        "background": "#e4e4e4",
        "iconColour": "#e4e4e4"
    },
    "todo-tree.customHighlight": {
        "NOTE": {
            "icon": "note",
        },
        "TODO": {
            "background": "#5f8700",
            "iconColour": "#5f8700",
        },
        "FIXME": {
            "background": "#d75f00",
            "iconColour": "#d75f00",
            "icon": "alert",
        },
        "BUG": {
            "background": "#d70000",
            "iconColour": "#d70000",
            "icon": "bug",
        },
        "DEBUG": {
            "background": "#808080",
            "iconColour": "#808080",
            "icon": "eye",
        },
        "HACK": {
            "background": "#af005f",
            "iconColour": "#af005f",
            "icon": "file-binary",
        },
        "OPTIMIZE": {
            "background": "#af8700",
            "iconColour": "#af8700",
            "icon": "zap",
        }
    },
    /*
        C/C++
    */
    "C_Cpp.clang_format_path": "/usr/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_fallbackStyle": "Visual Studio",
    "C_Cpp.default.configurationProvider": "vector-of-bool.cmake-tools",
    /*
        CMake
    */
    "cmake.preferredGenerators": [
        "Unix Makefiles",
        "Ninja",
    ],
    "cmake.configureOnOpen": true,
    "cmake.autoRestartBuild": true,
    "cmake.revealLog": "never",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.installPrefix": "${workspaceFolder}/build/install",
    "cmake.enabledOutputParsers": [
        "cmake",
        "gcc",
        "gnuld",
    ],
    "[cmake]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?"
    },
    /*
        Python
    */
    "python.venvPath": "~/.cache/pypoetry/virtualenvs",
    "python.analysis.openFilesOnly": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.lintOnSave": true,
    "python.formatting.provider": "black",
    "[python]": {
        "editor.renderIndentGuides": true,
        "editor.rulers": [
            88,
        ],
        "editor.formatOnPaste": false, // Not available with black
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "kivy.requireKivyHeader": true,
    "[kivy]": {
        "editor.renderIndentGuides": true
    },
    /*
        Shell script
    */
    "[shellscript]": {
        "editor.lineNumbers": "relative",
    },
    "shellcheck.exclude": [
        "SC2148", // Ignore missing shebang
        "SC1071", // Ignore error about unsupported Zsh
    ],
    /*
        XML
    */
    "xml.format.splitAttributes": false,
    /*
        Other languages
    */
    "[tsv]": {
        "editor.insertSpaces": false,
    },
}
