/*
    VSCode keybindings
*/
[
    /*
        Application
    */
    {
        "key": "ctrl+r",
        "command": "workbench.action.openRecent",
    },
    {
        "key": "ctrl+shift+r",
        "command": "workbench.action.reloadWindow",
    },
    /*
        Opening
    */
    {
        "key": "ctrl+o",
        "command": "workbench.action.files.openFile",
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.files.openFolder",
    },
    /*
        Tasks
    */
    {
        "key": "ctrl+b",
        "command": "workbench.action.tasks.build",
    },
    {
        "key": "ctrl+shift+b",
        "command": "workbench.action.tasks.runTask",
    },
    /*
        Terminal
    */
    {
        "key": "ctrl+[Backquote] ctrl+[Backquote]",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+[Backquote] ctrl+[Backquote]",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+[Backquote] ctrl+n",
        "command": "workbench.action.terminal.new",
    },
    {
        "key": "ctrl+[Backquote] ctrl+1",
        "command": "workbench.action.terminal.focusAtIndex1",
    },
    {
        "key": "ctrl+[Backquote] ctrl+2",
        "command": "workbench.action.terminal.focusAtIndex2",
    },
    {
        "key": "ctrl+[Backquote] ctrl+3",
        "command": "workbench.action.terminal.focusAtIndex3",
    },
    {
        "key": "ctrl+[Backquote] ctrl+4",
        "command": "workbench.action.terminal.focusAtIndex4",
    },
    {
        "key": "ctrl+[Backquote] ctrl+5",
        "command": "workbench.action.terminal.focusAtIndex5",
    },
    {
        "key": "ctrl+[Backquote] ctrl+6",
        "command": "workbench.action.terminal.focusAtIndex6",
    },
    {
        "key": "ctrl+[Backquote] ctrl+7",
        "command": "workbench.action.terminal.focusAtIndex7",
    },
    {
        "key": "ctrl+[Backquote] ctrl+8",
        "command": "workbench.action.terminal.focusAtIndex8",
    },
    {
        "key": "ctrl+[Backquote] ctrl+9",
        "command": "workbench.action.terminal.focusAtIndex9",
    },
    /*
        Debug
    */
    {
        "key": "ctrl+d",
        "command": "workbench.action.debug.restart",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+shift+d",
        "command": "workbench.action.debug.stop",
    },
    /*
        UI components manipulation
    */
    {
        "key": "ctrl+escape",
        "command": "workbench.action.showCommands",
    },
    {
        "key": "ctrl+m",
        "command": "workbench.action.toggleMaximizedPanel",
    },
    {
        "key": "ctrl+f",
        "command": "actions.find",
    },
    /*
        Navigation
    */
    {
        "key": "ctrl+[Period]",
        "command": "workbench.action.gotoLine",
        "when": "editorTextFocus"
    },
    /*
        Editor
    */
    // Comments
    {
        "key": "ctrl+numpad_divide",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+numpad_divide",
        "command": "editor.action.blockComment",
        "when": "editorTextFocus && !editorReadonly"
    },
    // Indentation and formatting
    {
        "key": "ctrl+i",
        "command": "editor.action.reindentselectedlines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+i",
        "command": "editor.action.reindentlines",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+i",
        "command": "editor.action.format",
        "when": "editorTextFocus && !editorReadonly"
    },
    // Lines manipulation
    {
        "key": "ctrl+up",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+down",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+up",
        "command": "editor.action.copyLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+down",
        "command": "editor.action.copyLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+alt+left",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus && !editorReadonly"
    },
]
