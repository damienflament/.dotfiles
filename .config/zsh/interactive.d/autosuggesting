# Shell command autosuggesting #

autoload source_all

if source_all /usr/share/zsh/plugins/zsh-autosuggestions/zsh-autosuggestions.zsh
then
    export ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20
    #export ZSH_AUTOSUGGEST_USE_ASYNC=true
    export ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=yellow,bold'
fi

# vim: ft=zsh
